name: Deploy to GitHub Pages

on:
  push:
    branches:
      - main # Adjust this to your branch name

permissions:
  contents: read
  pages: write
  id-token: write

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      # Check out the repository
      - name: Checkout
        uses: actions/checkout@v4 # Updated to v4

      # Install dependencies (if needed for building the project)
      # Remove this step if your site is prebuilt
      - name: Install dependencies
        run: npm install # Adjust for your build system

      # Build the project (if needed)
      - name: Build project
        run: npm run build # Adjust for your build system

      # Upload built content as an artifact
      - name: Upload artifact
        uses: actions/upload-pages-artifact@v2
        with:
          path: dist # Specify the dist folder as the source

  deploy:
    needs: build
    runs-on: ubuntu-latest
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}

    steps:
      # Download the artifact from the build job
      - name: Download artifact
        uses: actions/download-pages-artifact@v2

      # Deploy to GitHub Pages
      - name: Deploy to GitHub Pages
        uses: actions/deploy-pages@v2
